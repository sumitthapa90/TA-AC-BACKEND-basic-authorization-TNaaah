<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div>
      <h4><%= articles.title %></h4>
      <p><%=articles.description %></p>
      <p><%=articles.tags %></p>
      <p><%=articles.author %></p>
      <p><%=articles.likes ? articles.likes : 0 %></p>
    </div>

    <div>
      <a href="/articles/<%= articles.id %>/likes"><button>likes</button></a>
      <a href="/articles/<%= articles.id %>/edit"><button>Edit</button></a>
      <a href="/articles/<%= articles.id %>/delete"><button>Delete</button></a>
      <a href="/articles"><button>Home</button></a>
    </div>

    <section class="comment">
      <h3>Comments</h3>
      
      <form action="/articles/<%= articles.id %>/comments" method="POST">
        <textarea
          name="content"
          cols="30"
          rows="10"
          placeholder="Comment"
        ></textarea>

        <div>
          <input type="submit" value="Add Comment" />
        </div>
      </form>

      <% articles.comments.forEach(comment =>{%>
      <div>
        <p><%=comment.content%></p>
        <div>
          <a href="/comments/<%= comment.id %>/edit"><button>Edit</button></a>

          <a href="/comments/<%= comment.id %>/delete"
            ><button>Delete</button></a
          >
        </div>
      </div>
      <% })%>
    </section>
  </body>
</html>
